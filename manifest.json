{
  "manifest_version": 3,
  "name": "LinkedIn AI Assistant",
  "version": "2.1.1",
  "description": "AI-powered content creation, rewriting, and suggestions for LinkedIn",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": [
        "utils/storage.js",
        "utils/dom.js",
        "utils/api.js",
        "components/post-creator.js",
        "components/comment-enhancer.js",
        "components/inbox-assistant.js",
        "components/rewrite-anywhere.js",
        "content/content.js"
      ],
      "css": ["styles/injected.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "LinkedIn AI Assistant"
  },

  "commands": {
    "get-suggestions": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Get AI suggestions"
    },
    "rewrite-text": {
      "suggested_key": {
        "default": "Ctrl+Shift+R"
      },
      "description": "Rewrite current text"
    }
  }
}
